{
  "name": "scrolller",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "npm run db:push -w api",
    "dev:api": "npm run dev -w api",
    "dev:web": "npm run dev -w web",
    "build:api": "npm run build -w api",
    "build:web": "npm run build -w web",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "build": "concurrently \"npm run build:api\" \"npm run build:web\""
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
